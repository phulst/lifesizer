
<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'lsform' }) do |f| %>
  <%= render :partial => 'layouts/alert', :object => devise_error_messages! if !f.error_messages.blank? %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <%= f.submit "Send me reset password instructions", :class => 'blue-button' %>
<% end %>

<p>
<%= render :partial => "devise/shared/links" %>
</p>

<% content_for :script_content do %>
$(function() {
   $('input[type="submit"]').button();
});
<% end %>

<% title "Sign In" %>

<h2>Sign in to LifeSizer!</h2>


<% if !notice && ! alert %>

<p>You only need a LifeSizer account if you're planning on submitting your own lifesize images or
  embed LifeSizer on your own site. </p>

<p>Don't have an account yet?
Then <%= link_to "register now", new_user_registration_path %> now for free! </p>

<% end %>

<br/>

<div id="social-signin">
<%= link_to image_tag('social/signin_facebook.png'), user_omniauth_authorize_path(:facebook) %>
<%= link_to image_tag('social/signin_google.png'), user_omniauth_authorize_path(:google_oauth2) %>
<%= link_to image_tag('social/signin_twitter.png'), user_omniauth_authorize_path(:twitter) %>
</div>

<%= render :partial => "layouts/notice_alert"  %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'lsform'}) do |f| %>
  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "sign in", :class => 'blue-button' %></p>
<% end %>

<p>
<%= render :partial => "devise/shared/links" %>
</p>
